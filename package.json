{
  "name": "markview-vue",
  "version": "0.1.0",
  "description": "Modern Vue 3 Markdown/MDX renderer with syntax highlighting, math formulas, TOC and more",
  "author": "advance",
  "repository": {
    "type": "git",
    "url": "https://github.com/hushaobo/markview-vue.git"
  },
  "homepage": "https://github.com/hushaobo/markview-vue#readme",
  "bugs": {
    "url": "https://github.com/hushaobo/markview-vue/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit && vite build",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@shikijs/langs": "^3.22.0",
    "@shikijs/themes": "^3.22.0",
    "katex": "^0.16.28",
    "lucide-vue-next": "^0.563.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.4.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "keywords": [
    "markview",
    "vue",
    "vue3",
    "markdown",
    "mdx",
    "renderer",
    "syntax-highlighting",
    "shiki",
    "katex",
    "gfm",
    "toc"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
